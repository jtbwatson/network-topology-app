# ============================================================================
# WIRELESS CONTROLLER & ACCESS POINT TEMPLATE - STANDARDIZED D2 FORMAT
# ============================================================================
# This template defines the complete data structure for wireless devices
# Supports: Aruba Wireless Controllers, Cisco WLC, Access Points

# ============================================================================
# ARUBA WIRELESS CONTROLLER DEVICE TEMPLATE
# ============================================================================
wireless_controller_device_name: {
  # REQUIRED BASIC PROPERTIES
  label: "display_name"
  type: "wireless_controller"
  mgmt_ip: "x.x.x.x"
  
  # OPTIONAL DEVICE METADATA
  hostname: "device_hostname"
  model: "device_model"
  serial_number: "serial_number"
  firmware_version: "controller_version"
  uptime: "uptime_string"
  location: "physical_location"
  
  # PERFORMANCE METRICS
  cpu_usage: "percentage"
  memory_usage: "percentage"
  storage_usage: "percentage"
  
  # ARUBA CONTROLLER CLUSTER
  controller_status: "active|standby|maintenance"
  cluster_enabled: "true|false"
  cluster_role: "master|local|backup"
  cluster_members: "member_count"
  cluster_ip: "cluster_virtual_ip"
  redundancy_status: "up|down"
  
  # ACCESS POINT MANAGEMENT
  aps_connected: "ap_count"
  aps_total: "total_aps"
  aps_up: "up_ap_count"
  aps_down: "down_ap_count"
  ap_models: "model1,model2,model3"
  
  # CLIENT STATISTICS
  total_clients: "client_count"
  clients_2ghz: "2ghz_client_count"
  clients_5ghz: "5ghz_client_count"
  clients_6ghz: "6ghz_client_count"
  
  # ARUBA LICENSING
  licenses_used: "used_count"
  licenses_available: "total_licenses"
  license_type: "permanent|subscription"
  license_pools: "pool1,pool2"
  
  # ARUBA-SPECIFIC FEATURES
  rf_optimization: "enabled|disabled"
  arm_enabled: "true|false"
  air_monitor: "enabled|disabled"
  ids_enabled: "true|false"
  spectrum_monitoring: "enabled|disabled"
  
  # MOBILITY AND TUNNELING
  mobility_master: "ip_address"
  mobility_domain: "domain_name"
  local_breakout: "enabled|disabled"
  tunneled_node: "enabled|disabled"
  
  # MANAGEMENT SETTINGS
  mgmt_vlan: "vlan_number"
  guest_portal: "enabled|disabled"
  captive_portal_profiles: "profile_count"
  
  # WIRELESS NETWORKS (SSIDs)
  ssid_count: "ssid_count"
  ssids: "ssid1,ssid2,ssid3"
  wlan_profiles: "profile1,profile2,profile3"
  
  # ARUBA CENTRALIZED AUTHENTICATION
  clearpass_enabled: "true|false"
  clearpass_server: "clearpass_ip"
  radius_servers: "server1,server2"
  
  # GUEST ACCESS
  guest_networks: "guest_ssid_count"
  guest_portal_profiles: "portal_profile_count"
  guest_users_active: "active_guest_count"
  
  # ARUBA CONTROLLER INTERFACE CONFIGURATIONS
  port_name: {
    # REQUIRED INTERFACE PROPERTIES
    description: "port_description"
    status: "up|down"
    bandwidth: "speed_with_units"
    
    # ARUBA CONTROLLER PORT PROPERTIES
    vlan: "vlan_number"
    vlan_mode: "access|trunk"
    trusted: "true|false"
    
    # LAG CONFIGURATION (for Aruba controller LAGs)
    lag_group: "lag_number"
    lag_mode: "static|lacp"
    
    # ARUBA-SPECIFIC PORT SETTINGS
    user_role: "role_name"
    captive_portal_profile: "profile_name"
    
    # PERFORMANCE METRICS
    input_rate: "bps"
    output_rate: "bps"
    ap_tunnel_count: "tunnel_count"
  }
}

# ============================================================================
# ACCESS POINT DEVICE TEMPLATE
# ============================================================================
access_point_device_name: {
  # REQUIRED BASIC PROPERTIES
  label: "display_name"
  type: "access_point"
  mgmt_ip: "x.x.x.x"
  
  # OPTIONAL DEVICE METADATA
  hostname: "ap_hostname"
  model: "ap_model"
  serial_number: "serial_number"
  firmware_version: "ap_version"
  uptime: "uptime_string"
  location: "physical_location"
  
  # ACCESS POINT SPECIFIC
  controller_ip: "controller_management_ip"
  controller_name: "controller_hostname"
  ap_group: "ap_group_name"
  clients_connected: "client_count"
  clients_max: "max_clients"
  
  # RADIO INFORMATION
  radio_2ghz_enabled: "true|false"
  radio_5ghz_enabled: "true|false"
  radio_6ghz_enabled: "true|false"
  channel_2ghz: "channel_number"
  channel_5ghz: "channel_number"
  channel_6ghz: "channel_number"
  power_2ghz: "dbm"
  power_5ghz: "dbm"
  power_6ghz: "dbm"
  
  # ARUBA-SPECIFIC RADIO FEATURES
  arm_2ghz: "enabled|disabled"
  arm_5ghz: "enabled|disabled"
  dfs_enabled: "true|false"
  spectrum_monitor: "enabled|disabled"
  
  # POWER AND ENVIRONMENT
  power_source: "poe|local|injector"
  power_consumption: "watts"
  temperature: "celsius"
  
  # ACCESS POINT STATUS
  adoption_status: "adopted|pending|failed"
  mesh_enabled: "true|false"
  mesh_role: "portal|point|disabled"
  mesh_parent: "parent_ap_name"
  
  # SSID CONFIGURATION (per-AP SSID settings)
  ssid_name: {
    enabled: "true|false"
    broadcast: "enabled|disabled"
    band: "2.4ghz|5ghz|6ghz|dual|tri"
    clients_connected: "client_count"
    authentication: "open|wpa2|wpa3|mixed"
    encryption: "none|tkip|aes|mixed"
    vlan: "vlan_number"
  }
}

# ============================================================================
# WIRELESS NETWORK (SSID) DATABASE
# ============================================================================
ssid_database: {
  site_ssids: {
    ssid_name: {
      # SSID BASIC PROPERTIES
      description: "ssid_description"
      enabled: "true|false"
      broadcast: "enabled|disabled"
      
      # RADIO CONFIGURATION
      band: "2.4ghz|5ghz|6ghz|dual|tri"
      max_clients_per_ap: "client_limit"
      max_clients_total: "total_limit"
      
      # SECURITY CONFIGURATION
      authentication: "open|wpa2-psk|wpa3-sae|wpa2-enterprise|wpa3-enterprise|mixed"
      encryption: "none|tkip|aes|mixed"
      psk: "pre_shared_key"
      
      # ENTERPRISE AUTHENTICATION
      radius_server_primary: "primary_radius_ip"
      radius_server_secondary: "secondary_radius_ip"
      radius_shared_secret: "shared_secret"
      
      # NETWORK ASSIGNMENT
      vlan: "vlan_number"
      ip_assignment: "static|dhcp|guest"
      
      # GUEST ACCESS
      guest_access: "enabled|disabled"
      captive_portal: "enabled|disabled"
      portal_profile: "portal_profile_name"
      guest_bandwidth_limit: "mbps"
      
      # QOS AND TRAFFIC MANAGEMENT
      qos_profile: "qos_profile_name"
      bandwidth_limit_down: "mbps"
      bandwidth_limit_up: "mbps"
      
      # ACCESS CONTROL
      mac_filtering: "enabled|disabled"
      time_restrictions: "schedule_name"
      user_role: "role_name"
      
      # STATISTICS
      total_clients: "client_count"
      total_traffic: "bytes"
      ap_count: "broadcasting_ap_count"
    }
  }
}

# ============================================================================
# AP GROUP CONFIGURATION
# ============================================================================
ap_group_database: {
  site_ap_groups: {
    group_name: {
      description: "group_description"
      ap_count: "member_ap_count"
      ap_models: "model1,model2,model3"
      
      # GROUP CONFIGURATION
      ssid_profiles: "profile1,profile2,profile3"
      rf_profile_2ghz: "rf_profile_name"
      rf_profile_5ghz: "rf_profile_name"
      
      # POWER AND RADIO SETTINGS
      power_mode: "auto|custom"
      channel_mode: "auto|custom"
      arm_enabled: "true|false"
      
      # LOCATION AND COVERAGE
      location_type: "indoor|outdoor|industrial"
      coverage_area: "square_feet"
    }
  }
}

# ============================================================================
# CONNECTION TOPOLOGY
# ============================================================================
# Use this format for wireless connections:
# switch1.1/0/12 -> wireless_controller1.port1
# wireless_controller1 -> access_point1 (logical wireless connection)

# ============================================================================
# SHOW COMMANDS FOR AUTOMATED POPULATION
# ============================================================================
# ARUBA WIRELESS CONTROLLERS:
# - show version (controller software and hardware info)
# - show ap active (active access point summary)
# - show ap database (comprehensive AP database)
# - show ap database long (detailed AP information)
# - show wlan ssid-profile (SSID configurations)
# - show user-table (connected client information)
# - show licensing (license usage and availability)
# - show controller (controller cluster information)
# - show datapath session table (client session details)
# - show ap arm rf-summary (RF environment summary)
# - show ap radio-summary (radio status summary)
# - show ap association (client association details)
# - show ap monitor (spectrum monitoring information)
# - show mobility-domain (mobility configuration)
# - show guest-provisioning (guest access status)
#
# CISCO WLC:
# - show sysinfo (system information)
# - show ap summary (access point summary)
# - show wlan summary (WLAN configuration summary)
# - show client summary (client connection summary)
# - show license summary (licensing information)
# - show mobility summary (mobility configuration)
# - show interface summary (interface configurations)
# - show port summary (port configurations)
#
# ACCESS POINTS (via Controller):
# - show ap config <ap-name> (AP-specific configuration)
# - show ap status <ap-name> (AP status and statistics)
# - show ap radio-summary <ap-name> (radio information)
# - show ap clients <ap-name> (connected clients)
# - show ap monitor <ap-name> (monitoring information)
#
# AUTOMATION TOOLS:
# - Aruba REST APIs (ArubaOS REST API, Central API)
# - Cisco WLC REST APIs (DNA Center, CMX APIs)
# - SNMP polling for statistics and status
# - Ansible wireless modules (arubaos_facts, etc.)
# - Custom scripts using SSH/Telnet with Netmiko

